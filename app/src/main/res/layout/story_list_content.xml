<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/story_list_content_padding_h"
    android:paddingRight="@dimen/story_list_content_padding_h"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/new_hint"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/new_item_hint"
        android:layout_width="@dimen/story_list_new_hint_size"
        android:layout_height="@dimen/story_list_new_hint_size" />

    <TextView
        android:layout_toLeftOf="@+id/new_hint"
        android:id="@+id/title"
        android:textSize="@dimen/story_list_content_title_text_size"
        android:textColor="#000000"
        android:maxLines="1"
        android:lines="1"
        android:paddingTop="@dimen/story_list_content_title_padding_v"
        android:paddingBottom="@dimen/story_list_content_title_padding_v"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/summary"
        android:textColor="#000000"
        android:layout_toLeftOf="@+id/new_hint"
        android:maxLines="1"
        android:lines="1"
        android:ellipsize="end"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>